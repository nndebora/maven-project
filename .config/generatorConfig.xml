<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--
	Maven command: 
	mvn -Dmybatis.generator.overwrite=true mybatis-generator:generate
 -->

<generatorConfiguration>

	<classPathEntry location="dsbpm-database-${database.impl.artifact.sufix}/src/main/resources/driver.jar" />
	
	<context id="SQLServerContext" targetRuntime="MyBatis3">
		<commentGenerator>
		   <property name="suppressDate" value="true"/>
		</commentGenerator>
		
		
		<jdbcConnection driverClass="${database.generator.driverClass}" connectionURL="${database.generator.connectionURL}" userId="${database.generator.userId}" password="${database.generator.password}"></jdbcConnection>

		<javaModelGenerator 
			targetPackage="com.ds.dsbpm.database.autogenerated.model" 
			targetProject="dsbpm-database-${database.impl.artifact.sufix}/src/main/java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<sqlMapGenerator 
			targetPackage="com.ds.dsbpm.database.autogenerated.mapper"
			targetProject="dsbpm-database-${database.impl.artifact.sufix}/src/main/resources">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>
		
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.ds.dsbpm.database.autogenerated.mapper" 
			targetProject="dsbpm-database-${database.impl.artifact.sufix}/src/main/java">
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>
				
		<table tableName="bpm_user" schema="dbo" domainObjectName="User" alias="a_user">
			<generatedKey column="id" sqlStatement="SqlServer" identity="true" />
		</table>
		
		<table tableName="bpm_user_group" schema="dbo" domainObjectName="UserGroup" alias="a_userGroup">
			<generatedKey column="id" sqlStatement="SqlServer" identity="true" />
		</table>
		
	</context>
</generatorConfiguration>